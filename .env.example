# Environment Configuration
# Copy this file to .env and fill in the values

# Discord Bot Token (required)
DISCORD_BOT_TOKEN=your_bot_token_here

# Discord Application Client ID (required)
DISCORD_CLIENT_ID=your_client_id_here

# Guild ID for development (optional, for faster command registration)
DISCORD_GUILD_ID=your_guild_id_here

# Wordle Bot User ID
WORDLE_BOT_ID=1211781489931452447

# Role IDs for ELO ranking
HIGHEST_ELO_ROLE_ID=your_highest_elo_role_id_here
LOWEST_ELO_ROLE_ID=your_lowest_elo_role_id_here

# Database Configuration
DATABASE_PATH=./data/wordle_ranked.db

# ELO Configuration
ELO_K_FACTOR=32
ELO_DEFAULT_RATING=1000

# Inactivity Configuration (days)
INACTIVITY_THRESHOLD=3

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info
